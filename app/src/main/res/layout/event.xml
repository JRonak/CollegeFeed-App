<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#afdde1dd"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/eventNameTv"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="23sp"
            android:text="Hackathon"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="9.30AM 12 August"
                android:id="@+id/eventTimeTv"
                android:textColor="#fff"
                android:background="@color/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:textColor="#fff"
                android:text="OLD CDX"
                android:id="@+id/eventLocationTv" />

        </LinearLayout>

        <TextView
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:id="@+id/attendCountTv"
            android:background="@color/dark"
            android:gravity="center"
            android:text="100 Attending"/>

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@color/white"
            android:gravity="center"
            android:text="adssfkjsadfjjadsfasdf\nsajkhasdfjb\nasdfasdf"
            android:id="@+id/eventDescTv"
            android:textColor="@color/dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:id="@+id/attendingButton"
                android:text="Attending"
                android:textColor="@drawable/white_textview_bg"
                android:background="@drawable/button_bg"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>